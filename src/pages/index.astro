---
import Layout from '../layouts/Layout.astro';
import P5HeroCanvas from '../components/P5HeroCanvas.astro';
---

<Layout title="nao.dev" description="Front-end Developer loving Vue ecosystem. 技術のこと、日々のこと、思いついたことを綴るブログ">
  <!-- Hero Section -->
  <section class="relative flex min-h-[calc(100vh-64px)] flex-col items-center justify-center overflow-hidden px-4 text-center">
    <P5HeroCanvas />

    <div class="relative z-10 flex flex-col items-center gap-8">
      <!-- Avatar / Logo -->
      <div
        class="flex size-24 items-center justify-center rounded-2xl text-white text-4xl font-black shadow-xl"
        style="background: var(--gradient-primary);"
      >
        N
      </div>

      <!-- Name & Title -->
      <div class="space-y-3">
        <h1 class="gradient-text text-7xl font-extrabold" style="letter-spacing: -0.04em;">
          nao.dev
        </h1>
        <p class="text-2xl font-medium" style="color: var(--color-text-secondary);">
          Front-end Developer
        </p>
        <p class="mx-auto max-w-lg text-base" style="color: var(--color-text-secondary);">
          Vue エコシステムを中心に、Web 技術を探求しています。
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap items-center justify-center gap-4">
        <a
          href="/blog"
          class="rounded-xl px-8 py-3 font-semibold text-white shadow-lg transition-all hover:scale-105 hover:shadow-xl"
          style="background: var(--gradient-primary);"
        >
          Blog
        </a>
        <a
          href="/about"
          class="rounded-xl border px-8 py-3 font-semibold transition-all hover:scale-105"
          style="color: var(--color-text-primary); border-color: var(--color-border); background: color-mix(in srgb, var(--color-surface-elevated) 60%, transparent);"
        >
          About
        </a>
        <a
          href="https://github.com/naokihaba"
          target="_blank"
          rel="noopener noreferrer"
          class="rounded-xl border px-8 py-3 font-semibold transition-all hover:scale-105"
          style="color: var(--color-text-primary); border-color: var(--color-border); background: color-mix(in srgb, var(--color-surface-elevated) 60%, transparent);"
        >
          GitHub
        </a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce" style="color: var(--color-text-secondary);">
      <svg xmlns="http://www.w3.org/2000/svg" class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </section>
</Layout>
